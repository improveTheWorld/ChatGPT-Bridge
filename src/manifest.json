{
  "manifest_version": 3,
  "name": "ChatGPT-Bridge",
  "version": "1.0.2",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "/assets/Logo/logo48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["crypto-js.min.js","content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["https://chatgpt.com/*"],
  "icons": {
    "48": "/assets/Logo/logo48.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "config.json", 
        "injected-popup.js", 
        "firstPrompt.txt", 
        "Terms of Service.html",
        "Privacy Policy.html",
        "assets/css/all.min.css",
        "assets/webfonts/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}